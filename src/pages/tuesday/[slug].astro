---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("tuesday");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<"tuesday">;
};

const { post } = Astro.props;
const { Content } = await post.render();

/**
 * Frontmatter-driven images (recommended)
 * Add these to each Tuesday markdown frontmatter:
 * hero: "/images/tuesday/from-borders-to-bridges-hero.jpg"
 * iconLeft: "/images/tuesday/icons/matthew-25.jpg"
 * iconRight: "/images/tuesday/icons/open-door.jpg"
 */

// Fallback images (used only if frontmatter doesn't provide them)
const fallbackHero = "/images/Tuesday/mirror-of-grace.jpg";
const fallbackLeft = "/images/Tuesday/saint-paul-the-apostle.jpg";
const fallbackRight = "/images/Tuesday/the-potter-and-the-clay.jpg";

const heroImage = post.data.hero ?? fallbackHero;
const leftImage = post.data.iconLeft ?? fallbackLeft;
const rightImage = post.data.iconRight ?? fallbackRight;
---

<BaseLayout title={`${post.data.title} — Tuesday Transformation`}>
  <main class="tt-page">

    <!-- HERO IMAGE -->
    <div class="tt-hero">
      <img
        src={heroImage}
        alt={post.data.heroAlt ?? "Tuesday Transformation hero image"}
        loading="eager"
      />
      <div class="tt-hero-overlay">
        <p class="tt-eyebrow">Tuesday Transformation</p>
        <h1>{post.data.title}</h1>
      </div>
    </div>

    <!-- 3 COLUMN LAYOUT -->
    <section class="tt-grid">

      <!-- LEFT COLUMN -->
      <aside class="tt-side">
        <img
          src={leftImage}
          alt={post.data.iconLeftAlt ?? "Tuesday Transformation icon (left)."}
          loading="lazy"
        />
      </aside>

      <!-- CENTER ARTICLE -->
      <article class="tt-content">
        {(post.data.scripture || post.data.date) && (
          <p class="tt-meta">
            {post.data.scripture ? post.data.scripture : ""}
            {post.data.scripture && post.data.date ? " • " : ""}
            {post.data.date ? post.data.date : ""}
          </p>
        )}

        <Content />
      </article>

      <!-- RIGHT COLUMN -->
      <aside class="tt-side">
        <img
          src={rightImage}
          alt={post.data.iconRightAlt ?? "Tuesday Transformation icon (right)."}
          loading="lazy"
        />
      </aside>

    </section>
  </main>

  <style>
    .tt-page {
      padding: 2rem 1rem 3rem;
      max-width: 1200px;
      margin: auto;
    }

    .tt-hero {
      position: relative;
      margin-bottom: 2.5rem;
      border-radius: 18px;
      overflow: hidden;
    }

    .tt-hero img {
      width: 100%;
      height: 350px;
      object-fit: cover;
      display: block;
    }

    .tt-hero-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(to top, rgba(0,0,0,.7), transparent);
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      padding: 1.5rem;
      color: white;
    }

    .tt-eyebrow {
      text-transform: uppercase;
      letter-spacing: .12em;
      font-size: .8rem;
      margin: 0 0 .5rem;
      opacity: .85;
    }

    .tt-grid {
      display: grid;
      grid-template-columns: 240px 1fr 240px;
      gap: 2rem;
      align-items: start;
    }

    .tt-side img {
      width: 100%;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0,0,0,.1);
      position: sticky;
      top: 1.5rem;
      display: block;
    }

    .tt-content {
      max-width: 720px;
    }

    .tt-meta {
      opacity: .75;
      margin-bottom: 1.5rem;
    }

    .tt-content :global(p) {
      line-height: 1.7;
      margin-bottom: 1rem;
    }

    .tt-content :global(h2) {
      margin-top: 2rem;
    }

    @media (max-width: 1000px) {
      .tt-grid {
        grid-template-columns: 1fr;
      }

      .tt-side img {
        position: static;
      }
    }
  </style>
</BaseLayout>